    <link href="/public/vendor/css/lib/helper.css" rel="stylesheet" />
    <link href="/public/vendor/css/style.css" rel="stylesheet" />
    <style>
      body#login-body {
        background-color: #53bc81;
      }

      .my-btn-dark-green {
        background-color: #336148;
      }

      #login-btn-submit {
        color: #ffffff;
        font-weight: bold;
      }

      #login-btn-submit:hover {
        background-color: #3f845f !important;
      }
    </style>
  </head>
  <body id="login-body">
    <div class="unix-login">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <div class="login-content">
              <div class="login-form">
                <h4>PDV Dafnis</h4>
                <form>
                  <div class="form-group">
                    <label>Usuario</label>
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Usuario"
                    />
                  </div>
                  <div class="form-group">
                    <label>Contraseña</label>
                    <input
                      type="password"
                      class="form-control"
                      placeholder="Contraseña"
                    />
                  </div>
                  <button
                    id="login-btn-submit"
                    type="submit"
                    class="btn my-btn-dark-green btn-flat m-b-30 m-t-30"
                  >
                    Iniciar Sesión
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
